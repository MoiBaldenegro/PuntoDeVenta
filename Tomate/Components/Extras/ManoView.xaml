                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Border Canvas.Left="23"
                    Canvas.Top="66"
                    Width="80"
                    Height="65"
                    CornerRadius="30,20,40,35"
                    BorderThickness="2"
                            BorderBrush="#9597a5"
                        Background="#e8eae9">
                <Border.RenderTransform>
                    <RotateTransform Angle="10" />
                </Border.RenderTransform>
            </Border>
        </Canvas>

