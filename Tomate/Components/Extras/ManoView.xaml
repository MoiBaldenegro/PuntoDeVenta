                    Height="45"
                    Tag="6"
                    Click="EditarDedo_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="Ellipse" Width="21"
                                Height="45"
                                BorderThickness="2"
                                CornerRadius="12,12,10,10"
                                BorderBrush="#9597a5"
                                Background="{Binding Colores[5]}">
                            <Border.RenderTransform>
                                <RotateTransform Angle="70" />
                            </Border.RenderTransform>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{Binding ColoresHover[5]}" TargetName="Ellipse" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Border Canvas.Left="23"
                    Canvas.Top="66"
                    Width="80"
                    Height="65"
                    CornerRadius="30,20,40,35"
                    BorderThickness="2"
                            BorderBrush="#9597a5"
                        Background="#e8eae9">
                <Border.RenderTransform>
                    <RotateTransform Angle="10" />
                </Border.RenderTransform>
            </Border>
            <Canvas.RenderTransform>
                <ScaleTransform ScaleX="-1"/>
            </Canvas.RenderTransform>
        </Canvas>
    </DockPanel>
</UserControl>
